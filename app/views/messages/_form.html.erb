<%= form_with model: [@message], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', ressource: @message %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :message_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, id: :message_email, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject, id: :message_subject, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :message %>
      <%= form.text_field :message, id: :message_message, class: 'form-control' %>
    </div>

    <p style="padding-top: 10px">
      <%= form.submit "Send", class: "btn btn-primary" %>
    </p>

  </div>
<% end %>
