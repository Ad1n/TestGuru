<tr>
  <td><%= test.title %></td>
  <td><%= test_level(test) %></td>
  <% if user_signed_in?  %>
    <td align="center"><%= test.questions.count %></td>
    <td><%= link_to t('.actions.show'), admin_test_path(test), class: "badge badge-success" %></td>
    <td><%= link_to t('.actions.edit'), edit_admin_test_path(test), class: "badge badge-warning" %></td>
    <td><%= link_to t('.actions.delete'),
            admin_test_path(test),
            method: :delete,
            data: { confirm: I18n.t("confirm.message") },
            class: "badge badge-danger" %>
    </td>
  <% end %>
</tr>