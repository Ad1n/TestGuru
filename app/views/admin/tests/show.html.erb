<h1><b><%= @test.title %></b></h1>

<p><%= render 'shared/errors', ressource: @test %></p>

<p class="box" align="center">
<%= link_to t('.new_question_link'), new_admin_test_question_path(@test.id), style: "text-decoration: none" %>
</p>

<div class="table-responsive">
  <table class="table table-striped">

    <thead class="thead-dark">
      <tr>
        <th>Question </th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= render @test.questions %>
    </tbody>

  </table>
</div>

<p class="box" align="center">
  <%= link_to t('.backlink'), admin_tests_path, style: "text-decoration: none" %> |
  <%= link_to t('.editlink'), edit_admin_test_path(@test), style: "text-decoration: none" %>
</p>