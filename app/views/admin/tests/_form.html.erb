<%= form_with model: [:admin, @test], local: true do |form| %>

  <% render 'shared/errors', ressource: @test %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :test_time, value: "Test time: " %>
    <%= form.time_select :test_time, id: :test_test_time, default: { hour: '00', minute: '00' } %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

