<div class="p-3 mb-2 bg-light text-dark">
  <p class="text-primary">
    <h1><b><%= t('.header') %></b></h1>
  </p>
</div>

<p class="btn btn-outline-primary">
  <%= link_to  t('.create_link'), new_admin_test_path, style: "text-decoration: none" %>
</p>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th><%= t('.table.title') %></th>
        <th><%= t('.table.level') %></th>
        <% if user_signed_in? %>
        <th><%= t('.table.question_count') %></th>
        <th colspan="3"><%= t('.table.actions') %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
</div>
