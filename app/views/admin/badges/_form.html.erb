<div class="">
  <p class="text-muted" style="font-size: 32px">
    <b><%= badge_header(@badge) %></b>
  </p>
</div>

<%= form_with model: [:admin, @badge], local: true do |form| %>

  <%= render 'shared/errors', ressource: @badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :badge_title, class: "form-control"  %>
  </p>

  <div class="form-group">
    <%= form.label :picture %>
    <%= form.text_area :picture, id: :badge_picture, rows: 3, class: "form-control" %>
  </div>

  <p>
    <%= form.label :rule %>
    <%= form.text_field :rule, id: :badge_rule, class: "form-control"  %>
  </p>

  <p>
    <%= form.label :rule_param %>
    <%= form.text_field :rule_param, id: :badge_rule_param, class: "form-control"  %>
  </p>

  <div class="box" style="width: auto">
    <%= form.submit %>
  </div>
<% end %>